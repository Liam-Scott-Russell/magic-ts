{
  "name": "magic-ts",
  "version": "0.0.0",
  "description": "Typescript types so good they're magic!",
  "main": "./dist/index.js",
  "scripts": {
    "pretest": "npm run doctest:generate",
    "test": "jest",
    "posttest": "npm run doctest:clean",
    "doctest:generate": "tsdoc-testify --fileMatch 'lib/**/*.ts'",
    "postdoctest:generate": "./scripts/doctest-names.sh && echo 'Generated doctests for magic-ts!'",
    "predoctest:cleanup": "echo 'About to delete the following doctests:' && ./scripts/doctest-names.sh",
    "doctest:cleanup": "./scripts/doctest-cleanup.sh",
    "postdoctest:cleanup": "./scripts/doctest-count.sh && echo 'Cleaned up doctests for magic-ts!'",
    "doctest:names": "./scripts/doctest-names.sh",
    "doctest:count": "./scripts/doctest-count.sh",
    "lint": "prettier --check . && eslint --ext .ts .",
    "postlint": "echo 'Linted magic-ts!'",
    "format": "prettier --write '**/*.{ts, md, json}' && eslint --fix --ext .ts .",
    "postformat": "echo 'Formatted magic-ts!'",
    "prebuild": "rm -rf ./dist npm run doctest:cleanup && npm run barrel && npm run format",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "echo 'Built magic-ts!'",
    "predependency:check": "npm run prebuild",
    "dependency:check": "madge --circular --warning --extensions ts --ts-config ./tsconfig.build.json .",
    "postdependency:check": "echo 'Checked the dependencies of magic-ts!'",
    "barrel": "barrelsby --config=./barrelsby.config.json",
    "postbarrel": "cp ./lib/type/index.override.ts ./lib/type/index.ts && echo 'Barreled magic-ts!'",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Liam-Scott-Russell/magic-ts.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Liam-Scott-Russell/magic-ts/issues"
  },
  "homepage": "https://github.com/Liam-Scott-Russell/magic-ts#readme",
  "devDependencies": {
    "@jest/types": "^28.1.1",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "barrelsby": "^2.3.4",
    "eslint": "^8.16.0",
    "eslint-config-canonical": "^35.0.1",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^28.1.0",
    "madge": "^5.0.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "tsdoc-testify": "^0.0.3",
    "typescript": "^4.6.4"
  }
}